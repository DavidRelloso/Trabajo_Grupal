                           <VBox maxWidth="300.0" minWidth="300.0" prefWidth="300.0" spacing="6.0" styleClass="col">
                              <children>
                                 <HBox spacing="8.0">
                                    <Label styleClass="col-title" text="DÍA 6"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Button styleClass="add-btn" text="+"/>
                                 </HBox>
                                 <Label styleClass="small-hint" text="Sin actividades"/>
                              </children>
                           </VBox>

                           <VBox maxWidth="300.0" minWidth="300.0" prefWidth="300.0" spacing="6.0" styleClass="col">
                              <children>
                                 <HBox spacing="8.0">
                                    <Label styleClass="col-title" text="DÍA 7"/>
                                    <Region HBox.hgrow="ALWAYS"/>
