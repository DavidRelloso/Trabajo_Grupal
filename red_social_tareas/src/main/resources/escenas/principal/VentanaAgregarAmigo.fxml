<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="20.0" vgap="20.0" 
	stylesheets="@/css/principal/amigosAgregar.css" styleClass="fondo-app" 
	xmlns="http://javafx.com/javafx" 
	xmlns:fx="http://javafx.com/fxml">
   <children>
      <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="15.0" styleClass="contenedor-amigos">
         <children>
            <Label text="Agregar usuario" styleClass="titulo" />
            <TextField promptText="Nombre usuario" prefWidth="360.0" />
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Region />
                  <Button text="Agregar" styleClass="boton-agregar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
