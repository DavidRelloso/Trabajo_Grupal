<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPeticiones" prefHeight="353.0"
	prefWidth="569.0" stylesheets="@/css/principal/peticionesAmigos.css"
	styleClass="fondo-app" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.main.friends.ControladorPeticionAmigo">

	<!-- TOP -->
	<top>
		<Label text="Peticiones" styleClass="titulo"
			BorderPane.alignment="CENTER_LEFT" />
	</top>

	<!-- CENTER -->
	<center>
		<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
			vbarPolicy="AS_NEEDED"
			style="-fx-background-color: transparent; -fx-background-insets: 0;">
			<content>
				<VBox fx:id="seccionPeticiones" spacing="10.0" />
			</content>
		</ScrollPane>
	</center>

	<!-- BOTTOM -->
	<bottom>
		<HBox alignment="CENTER_LEFT" spacing="10"
			styleClass="contenedor-boton">
			<Button fx:id="btnActualizar" text="Actualizar"
				styleClass="boton-agregar" />
		</HBox>
	</bottom>

</BorderPane>
