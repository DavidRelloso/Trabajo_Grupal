<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox spacing="12.0"
      alignment="CENTER_LEFT"
      stylesheets="@/css/creacionesVentanas.css"
      styleClass="contenedor-fecha"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <children>
        <TextField fx:id="txtFecha"
                   promptText="elegir fecha"
                   prefWidth="260.0"
                   styleClass="campo" />

        <DatePicker fx:id="dpFecha"
                    promptText="Fecha"
                    prefWidth="220.0"
                    styleClass="campo" />

        <Button fx:id="btnAgregarFecha"
                text="+"
                prefWidth="40.0"
                styleClass="boton-mas" />
    </children>

</HBox>