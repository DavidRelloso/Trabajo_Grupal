<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<GridPane hgap="20.0" vgap="20.0"
          stylesheets="@/css/creacionesVentanas.css"
          styleClass="fondo-app"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml">

    <children>

        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0"
              spacing="14.0"
              styleClass="contenedor-nota">

            <children>

                <Label text="Crear nota" styleClass="titulo" />

                <!-- FECHA (ANTES DEL TITULO O DONDE QUIERAS) -->
                <HBox spacing="12.0"
                      alignment="CENTER_LEFT"
                      styleClass="contenedor-fecha">
                    <children>
                        <TextField fx:id="txtFecha"
                                   promptText="elegir fecha"
                                   prefWidth="260.0"
                                   styleClass="campo" />

                        <DatePicker fx:id="dpFecha"
                                    promptText="Fecha"
                                    prefWidth="220.0"
                                    styleClass="campo" />

                        <Button fx:id="btnAgregarFecha"
                                text="+"
                                prefWidth="40.0"
                                styleClass="boton-mas" />
                    </children>
                </HBox>

                <TextField fx:id="txtTitulo"
                           promptText="TITULO"
                           prefWidth="420.0"
                           styleClass="campo" />

                <HBox spacing="18.0" styleClass="fila-horas">
                    <children>
                        <TextField fx:id="txtHoraInicio"
                                   promptText="Hora inicio"
                                   prefWidth="200.0"
                                   styleClass="campo" />

                        <TextField fx:id="txtHoraFin"
                                   promptText="Hora fin (opcional)"
                                   prefWidth="200.0"
                                   styleClass="campo" />
                    </children>
                </HBox>

                <TextArea fx:id="txtTexto"
                          promptText="TEXTO"
                          prefWidth="420.0"
                          prefHeight="160.0"
                          wrapText="true"
                          styleClass="campo-texto" />

                <HBox spacing="12.0"
                      alignment="CENTER_LEFT"
                      styleClass="fila-botones">
                    <children>
                        <Button fx:id="btnCompartir"
                                text="compartir"
                                styleClass="boton-opcion" />

                        <Button fx:id="btnPublico"
                                text="publico"
                                styleClass="boton-opcion" />

                        <Button fx:id="btnPrivado"
                                text="privado"
                                styleClass="boton-opcion" />

                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

            </children>
        </VBox>

    </children>
</GridPane>