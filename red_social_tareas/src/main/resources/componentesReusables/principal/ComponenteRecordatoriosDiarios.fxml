<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane fx:id="tpPrincipalRecordatorio"
	xmlns:fx="http://javafx.com/fxml" animated="false" prefWidth="600.0"
	text="NOMBRE_AMIGO"
	fx:controller="controller.main.ControladorRecordatorios">
	<content>
	
		<VBox fillWidth="true" spacing="10">
		    <children>
		        <ScrollPane fitToWidth="true"
		                    hbarPolicy="NEVER"
		                    VBox.vgrow="ALWAYS"
		                    styleClass="scroll-pane">
		            <content>
		                <VBox fillWidth="true"  prefWidth="10.0">
		                    <children>
		                        <Label fx:id="lblTextoRecordatorio"
		                               styleClass="etiqueta-campo"
		                               wrapText="true"
		                               maxWidth="Infinity"
		                               text="TEXTO_NOTIFICACION" />
		                    </children>
		                </VBox>
		            </content>
		        </ScrollPane>
		
		        <Separator/>
		
		        <StackPane alignment="CENTER_RIGHT">
		            <children>
		                <Button fx:id="btnBorrarRecordatorio"
		                        alignment="CENTER"
		                        contentDisplay="RIGHT"
		                        mnemonicParsing="false"
		                        prefHeight="26.0"
		                        prefWidth="30.0"
		                        styleClass="boton-eliminar"
		                        text="X" />
		            </children>
		        </StackPane>
		    </children>
		</VBox>
		
	</content>
	<padding>
		<Insets left="10.0" right="10.0" top="5.0" />
	</padding>
</TitledPane>


