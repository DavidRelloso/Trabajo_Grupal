<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns="http://javafx.com/javafx/25"
	  xmlns:fx="http://javafx.com/fxml/1"
	  maxWidth="300.0" maxHeight="Infinity" 
	  minWidth="300.0" prefWidth="300.0"
	  spacing="6.0" styleClass="col" 
	  fx:controller="controller.diary.ControladorColumnaDia">

    <children>

        <!-- CABECERA DEL DIA -->
        <HBox spacing="8.0">
            <children>
                <Label fx:id="lblTituloDia" styleClass="col-title" text="DÃA" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnAddNota" styleClass="add-btn" text="+" />
                <Button fx:id="btnEliminarDia" styleClass="column-delete-btn" text="-" />
            </children>
        </HBox>

        <!-- LISTA DE NOTAS -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    styleClass="list-scroll" VBox.vgrow="ALWAYS">
            <content>
                <VBox fx:id="notasVBox" spacing="12.0" />
                	<!-- SECCION DE LAS NOTAS -->
            </content>
        </ScrollPane>

    </children>
</VBox>
